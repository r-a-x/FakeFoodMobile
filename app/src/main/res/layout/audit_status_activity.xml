<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.mauth.rahulb.fakefood10.activity.ProductAuditActivity">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/productNameTextView"
        tools:text="Product Name"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:textSize="12sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:id="@+id/statusTextView"
        tools:text="Status Text View"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/productNameTextView"
        android:layout_alignEnd="@+id/productNameTextView"
        android:layout_height="30dp"
        android:textSize="12sp" />

    <TextView
        android:text="Bar Code Text View"
        android:layout_height="30dp"
        android:id="@+id/barCodeTextView"
        tools:text="Bar Code"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/statusTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_height="30dp"
        android:id="@+id/companyTextView"
        tools:text="Company Name"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/barCodeTextView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
